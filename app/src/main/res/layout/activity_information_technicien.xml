<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".InformationTechnicien">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-160dp"
            android:id="@+id/open_menu"
            android:src="@drawable/open_menu"
            android:contentDescription="@string/todo"
            android:layout_marginStart="-160dp" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/technician"
            android:contentDescription="@string/todo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/technician"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/technicien"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/assistanttechnicien"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/aide_technicien"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/debutreparition"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/d_but_r_paration"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/finreparition"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/fin_r_paration"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/detailrep"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/d_tail_r_paration"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/nex"
            android:textColor="@color/black"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="-130dp"
            android:textSize="20sp"
            android:text="@string/suivant"
            android:layout_marginStart="-130dp"
            tools:targetApi="lollipop" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choisir_les_dates"
            android:id="@+id/choisirdate"
            android:textColor="@color/black"
            android:backgroundTint="#00000000"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:targetApi="lollipop"
            android:layout_marginStart="70dp" />
    </LinearLayout></ScrollView>