<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Calendrier"
    android:background="@drawable/h">
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendrier"
        android:layout_marginTop="50dp"
        android:headerBackground="#F3C4F4"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_d_acha"
                android:id="@+id/bt_date_dachat"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:id="@+id/textview_date_dachat"
                android:textSize="20sp"
                android:layout_marginStart="10dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_de_livraison"
                android:id="@+id/bt_date_livraison"
                android:textColor="@color/white"
                android:layout_marginStart="120dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:layout_marginLeft="120dp"
                android:id="@+id/textview_date_livraison"
                android:textSize="20sp"
                android:layout_marginStart="120dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="240dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/enregistrer"
                android:id="@+id/enregistrer"
                android:textColor="@color/white"
                android:layout_marginStart="240dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="360dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_d_but_r_paration"
                android:id="@+id/bt_debut_reparation"
                android:textColor="@color/white"
                android:layout_marginStart="360dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:layout_marginLeft="370dp"
                android:id="@+id/textView_debut_reparation"
                android:textSize="20sp"
                android:layout_marginStart="370dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="480dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_fin_r_paration"
                android:id="@+id/bt_fin_reparation"
                android:textColor="@color/white"
                android:layout_marginStart="480dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:layout_marginLeft="490dp"
                android:id="@+id/textview_fin_reparation"
                android:textSize="20sp"
                android:layout_marginStart="490dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="600dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/enregistrer"
                android:textColor="@color/white"
                android:id="@+id/enregistrer1"
                android:layout_marginStart="600dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="720dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_demande_pdr"
                android:id="@+id/bt_demandePDR"
                android:textColor="@color/white"
                android:layout_marginStart="720dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:id="@+id/textview_demandePDR"
                android:layout_marginLeft="730dp"
                android:textSize="20sp"
                android:layout_marginStart="730dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="840dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/date_r_ception_pdr"
                android:id="@+id/bt_receptionPDR"
                android:textColor="@color/white"
                android:layout_marginStart="840dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text=""
                android:id="@+id/textview_receptionPDR"
                android:layout_marginLeft="850dp"
                android:textSize="20sp"
                android:layout_marginStart="850dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="960dp"
                android:background="@drawable/roundbuttonrose"
                android:text="@string/enregistrer"
                android:id="@+id/enregistrer2"
                android:textColor="@color/white"
                android:layout_marginStart="960dp" />
        </RelativeLayout>
    </HorizontalScrollView>
</LinearLayout>