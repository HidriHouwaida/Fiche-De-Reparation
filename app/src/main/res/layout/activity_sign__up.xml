<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbeige">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".Sign_Up">
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/se_connecter"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/cr_er_un_compte"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4169E1"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:background="@drawable/roundbuttonblanc"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/nom_de_client"
                android:id="@+id/username"
                android:layout_marginStart="20dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "textPassword"
            android:background="@drawable/roundbuttonblanc"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/mot_de_passe"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/adress"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/adresse_email"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/nomsociete"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/nom_de_soci_t"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType = "text"
            android:background="@drawable/roundbuttonblanc">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/telephone_domicile"
                android:background="@drawable/roundbuttonblanc"
                android:hint="@string/t_l_phone_de_soci_t"
                android:layout_marginStart="10dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-100dp"
            android:text="@string/cr_er"
            android:id="@+id/sign_up_button"
            android:backgroundTint="#4169E1"
            android:layout_marginStart="-100dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/button_aleardyhadaccount"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-55dp"
            android:backgroundTint="#4169E1"
            android:text="@string/vous_avez_d_ja_un_compte"
            android:layout_marginStart="100dp"
            tools:targetApi="lollipop" />
    </LinearLayout></ScrollView>