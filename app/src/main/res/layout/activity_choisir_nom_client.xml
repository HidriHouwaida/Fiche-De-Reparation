<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbeige"
    tools:context=".ChoisirNomClient">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="@string/entrer_le_nom_de_client"
        android:textSize="30sp"
        android:layout_marginStart="50dp">
    </TextView>
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:id="@+id/nomclient"
        android:layout_marginLeft="-300dp"
        android:layout_marginStart="-300dp"
        android:autofillHints=""
        android:inputType="text"
        tools:ignore="LabelFor">
    </EditText>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-220dp"
        android:text="@string/valider"
        android:textSize="20sp"
        android:id="@+id/valider"
        android:backgroundTint="#00000000"
        android:textColor="@color/teal_200"
        android:layout_marginTop="350dp"
        android:layout_marginStart="-220dp"
        tools:targetApi="lollipop" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-240dp"
        android:text="@string/liste_des_clients"
        android:backgroundTint="#00000000"
        android:textSize="20sp"
        android:textColor="@color/teal_200"
        android:id="@+id/ListeDesClient"
        android:layout_marginTop="400dp"
        android:layout_marginStart="-240dp"
        tools:targetApi="lollipop" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-300dp"
        android:text="@string/supprimer"
        android:backgroundTint="#00000000"
        android:textSize="20sp"
        android:textColor="@color/teal_200"
        android:id="@+id/SupprimerClient"
        android:layout_marginTop="450dp"
        android:layout_marginStart="-300dp"
        tools:targetApi="lollipop" />
</LinearLayout>